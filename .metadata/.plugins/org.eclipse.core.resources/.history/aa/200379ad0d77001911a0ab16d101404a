package com.fuller.DungeonTrip.render;

import org.joml.Matrix4f;

import com.fuller.DungeonTrip.Refs;

public class RenderMaster {
	static Texture tex = new Texture(Refs.res + "assets/textures/test.png");
	static Model model = new Model(
			new float[] {
					-0.5f, 0.5f, 0,
					0.5f, 0.5f, 0,
					0.5f, -0.5f, 0,
					-0.5f, -0.5f, 0
			},
			new float[] {
					0, 0,
					1, 0,
					1, 1,
					0, 1
			},
			new int[] {
					0, 1, 2,
					2, 3, 0
			}
			);
	static Shader shader = new Shader("shader");
	static Matrix4f projection = new Matrix4f().ortho2D(-640/2, 640/2, -480/2, 480/2).scale(64);
	static Camera camera = new Camera(640, 480);
	
	public static void init()
	{
		// Call In GameLoop Init.
	}
	
	public static void render()
	{
		shader.bind();
		shader.setUniform("sampler", 0);
		shader.setUniform("projection", camera.getProjection().mul(projection));
		tex.bind(0);
		model.render();
	}

}
