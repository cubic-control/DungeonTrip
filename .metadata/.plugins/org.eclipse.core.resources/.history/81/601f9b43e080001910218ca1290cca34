package com.fuller.DungeonTrip;

public class Refs {
	public static final String tex = "assets/textures/";
	public static final String snd = "assets/sounds/";
	public static boolean debug = false;
	public static boolean dev = false;
	
	public static String getFile(String texture)
	{
		String PROGRAM_DIRECTORY;
		
		try
		{
			PROGRAM_DIRECTORY = Refs.class.getClassLoader().getResource(texture).getPath();
			
			try
			{
				PROGRAM_DIRECTORY = PROGRAM_DIRECTORY.substring(0, PROGRAM_DIRECTORY.lastIndexOf('!'));
			}
			catch(Exception e)
			{
				// Do Nothing
			}
			PROGRAM_DIRECTORY = PROGRAM_DIRECTORY.substring(0, PROGRAM_DIRECTORY.lastIndexOf('/') + 1);
			
			if(PROGRAM_DIRECTORY.startsWith("/"))
			{
				PROGRAM_DIRECTORY = PROGRAM_DIRECTORY.substring(1, PROGRAM_DIRECTORY.length());
			}
			
			if(PROGRAM_DIRECTORY.startsWith("file:/"))
			{
				PROGRAM_DIRECTORY = PROGRAM_DIRECTORY.substring(6, PROGRAM_DIRECTORY.length());
			}
		}
		catch(Exception e)
		{
			PROGRAM_DIRECTORY = "";
		}
		System.out.println(PROGRAM_DIRECTORY);
		return PROGRAM_DIRECTORY;
	}

}
